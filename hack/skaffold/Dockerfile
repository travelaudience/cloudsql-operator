FROM gcr.io/distroless/base

# Use the pre-built binary in "build/cloudsql-postgres-operator" (i.e. the one generated by running "make build").
# This is done so we can take advantage of local cache directories, and makes skaffold re-deploy the application only when it is recompiled.
COPY build/cloudsql-postgres-operator /cloudsql-postgres-operator

CMD ["/cloudsql-postgres-operator", "-h"]
